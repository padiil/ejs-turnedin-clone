<!DOCTYPE html>
<html lang="en">
  <%- include('../../../partials/head.ejs') %>
  <body>
    <%- include('../../../partials/header.ejs') %>
    <main style="min-height: 84.5vh; display: flex; flex-direction: column">
      <div class="mt-3 mt-md-5">
        <div class="container justify-content-center mx-auto mt-md-4">
          <form action="" class="files p-3 my-5">
            <div class="container">
              <label for="no-referensi" class="fw-bold">Cek Pesanan</label>
              <div class="row my-3">
                <div class="col-8 col-md-10 px-0">
                  <input
                    type="text"
                    class="form-control mb-1 fz-13"
                    placeholder="Masukkan No.HP atau Ref"
                    name="no-referensi"
                  />
                </div>
                <div class="col-2 col-md-2">
                  <button class="btn btn-dark fz-14">Submit</button>
                </div>
              </div>
              <span class="text-danger fz-14"
                >*Format No.Hp (62XXXXXXXXXX) atau Ref</span
              >
            </div>
          </form>
          <div class="row my-5">
            <div class="col-lg-12 text-center my-5">
              <img
                src="https://turnedin.id/img/illustration/no-data.png"
                alt=""
                class="w-25"
              />
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('../../../partials/footer.ejs') %>
  </body>
</html>
